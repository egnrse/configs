# some aliases and more (win powershell variant)
# put this in $PROFILE

#setx EDITOR "nvim"
Set-Alias v 'nvim'

# commands
Set-Alias lsa 'ls'
function clsa {
	clear
	ls
	}
function cd.. {
	cd ..
}

# git
function gits { git status }
function gitlg {git log --oneline}
function gitlog {git log}
function gitbr {git branch}

# custom locations
function cddDocs {
	cd  D:\Dokumente2
}
Set-Alias dDocs cddDocs
function cddTU {
	cd  "D:\TU Informatik"
}
Set-Alias dTU cddTU
function cdcDocs {
	cd  C:\Users\nitsc\Documents
}
Set-Alias cDocs cdcDocs
